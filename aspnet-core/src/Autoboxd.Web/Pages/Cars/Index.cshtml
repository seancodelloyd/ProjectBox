@page "{title}"
@model Autoboxd.Web.Pages.Cars.IndexModel

@await Component.InvokeAsync("HeroImage", new { imageUrl = @Model.ImagePath })

<h1>@Model.Name</h1>
<h3>@Model.Year</h3>

<p>@Html.Raw(Model.Description)</p>
<p>@Model.ItemId</p>

@await Component.InvokeAsync("ItemRating", new { rating = @Model.Rating })

@await Component.InvokeAsync("ContentSection", new { title = "120 comments" })

<abp-input asp-for="@Model.Comment" label="Add a comment" />

<a abp-button="Primary" class="register-button">Post comment</a>

