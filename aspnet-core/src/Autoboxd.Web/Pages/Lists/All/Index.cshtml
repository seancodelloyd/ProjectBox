@page
@model Autoboxd.Web.Pages.Lists.All.IndexModel
@section scripts
{
    <abp-script src="/Pages/Lists/All/Index.cshtml.js" />
}

@await Component.InvokeAsync("ContentSection", new { title = "My lists" })
<div class="row">
    @foreach (var list in Model.Lists)
    {
        <div class="col-lg-6">
            @await Component.InvokeAsync("ListGrid", new { listDto = list })
        </div>
    }
</div>

