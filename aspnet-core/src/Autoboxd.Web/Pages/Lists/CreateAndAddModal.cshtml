@page
@using Autoboxd.Localization
@using Autoboxd.Lists
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model CreateAndAddModalModel
@inject IStringLocalizer<AutoboxdResource> L
@{
    Layout = null;
}
<abp-dynamic-form abp-model="List" asp-page="/Lists/CreateAndAddModal">
    <abp-modal>
        <abp-modal-header title="@L["NewList"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>