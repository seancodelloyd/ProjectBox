@model Autoboxd.Web.Components.ReviewDetails.ReviewDetailsViewModel

<div class="component reviewDetails">
    <div class="row">
        <div class="review-image col-4">
            @await Component.InvokeAsync("ItemLink", new { imageUrl = Model.ImageUrl })
        </div>
        <div class="review-content col-8">
            <div class="review-header">
                <h3 class="review-title">@Model.Title</h3>
            </div>
            <div class="review-details"></div>
            <div class="review-content">
                @Model.Description
            </div>
            <div class="review-favourites"></div>
        </div>
    </div>
</div>
